<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin - SurveyWeb</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800;900&family=Sora:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ultimate-design.css" asp-append-version="true" />

    <style>
        /* Ngăn ancestor áp transform phá position:fixed */
        html, body, .admin-wrapper, .admin-content {
            transform: none !important;
        }
        /* Nếu có hiệu ứng fade-in dùng translateY ở CSS ngoài, đổi về opacity-only */
        .fade-in {
            animation: fadeInOnly 220ms ease-out both !important;
        }
        @@keyframes fadeInOnly {
            from { opacity: 0; }
            to   { opacity: 1; }
        }

        .admin-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg, rgba(15, 23, 42, 0.96) 0%, rgba(30, 41, 59, 0.94) 100%);
            color: #f8fafc;
            position: fixed;      /* cố định toàn trang */
            top: 0;
            left: 0;
            height: 100dvh;       /* chuẩn viewport trên mobile */
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
            overflow-anchor: none;
            border-right: 1px solid rgba(148, 163, 184, 0.25);
            box-shadow: 0 30px 60px -30px rgba(15, 23, 42, 0.6);
            z-index: 1040;
            will-change: transform;
            overscroll-behavior: contain;
        }
        body.theme-dark .admin-sidebar {
            background: linear-gradient(180deg, rgba(15, 23, 42, 0.98) 0%, rgba(15, 23, 42, 0.9) 100%);
        }

        .admin-sidebar-header {
            padding: 1.5rem 1.25rem;
            border-bottom: 1px solid rgba(255,255,255,0.08);
        }

        .admin-nav-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1.25rem;
            color: rgba(255,255,255,0.72);
            text-decoration: none;
            transition: background 0.2s ease, color 0.2s ease;
            border-left: 3px solid transparent;
        }
        .admin-nav-item:hover {
            background: rgba(148, 163, 184, 0.14);
            color: #fff;
        }
        .admin-nav-item.active {
            background: rgba(79, 70, 229, 0.25);
            color: #fff;
            border-left-color: var(--color-primary);
        }

        .admin-content {
            margin-left: 260px; /* chừa chỗ sidebar cố định */
            flex: 1;
            display: flex;
            flex-direction: column;
            min-width: 0;
        }

        .admin-header {
            background: rgba(255, 255, 255, 0.85);
            border-bottom: 1px solid rgba(148, 163, 184, 0.3);
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 10;
            backdrop-filter: blur(18px);
        }
        body.theme-dark .admin-header {
            background: rgba(15, 23, 42, 0.85);
            border-bottom-color: rgba(148, 163, 184, 0.2);
        }

        .admin-header-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
        }

        .admin-header-actions {
            display: flex;
            gap: 0.75rem;
            align-items: center;
        }

        .admin-main {
            padding: 2rem;
            flex: 1;
        }

        .alert-admin {
            border-radius: 12px;
        }

        /* Desktop: đảm bảo không bị translate */
        @@media (min-width: 992px) {
            .admin-sidebar { transform: none !important; }
        }

        /* Mobile: sidebar trượt ra/vào bằng toggle */
        @@media (max-width: 991px) {
            .admin-sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            .admin-sidebar.show {
                transform: translateX(0);
            }
            .admin-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body class="theme-light fade-in">
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="admin-sidebar-header">
                <a asp-area="Public" asp-controller="Home" asp-action="Index" class="admin-logo">
                    <i class="bi bi-bar-chart-steps"></i>
                    <span>SurveyWeb</span>
                </a>
            </div>

            <nav class="admin-nav">
                <div class="admin-nav-section">Dashboard</div>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                   class="admin-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i>
                    <span>T&#x1ED5;ng quan</span>
                </a>

                <div class="admin-nav-section">Qu&#x1EA3;n l&#xFD;</div>
                <a asp-area="Admin" asp-controller="Surveys" asp-action="Index"
                   class="admin-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Surveys" ? "active" : "")">
                    <i class="bi bi-file-earmark-text"></i>
                    <span>Kh&#x1EA3;o s&#xE1;t</span>
                </a>
                <a asp-area="Admin" asp-controller="AiBuilder" asp-action="Index"
                   class="admin-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AiBuilder" ? "active" : "")">
                    <i class="bi bi-stars"></i>
                    <span>AI Survey Builder</span>
                </a>
                <a asp-area="Admin" asp-controller="Topics" asp-action="Index"
                   class="admin-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Topics" ? "active" : "")">
                    <i class="bi bi-tags"></i>
                    <span>Danh m&#x1EE5;c</span>
                </a>
                <a asp-area="Admin" asp-controller="Surveys" asp-action="Reports"
                   class="admin-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Surveys" && ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")">
                    <i class="bi bi-graph-up"></i>
                    <span>Th&#x1ED1;ng k&#xEA;</span>
                </a>

                <div class="admin-nav-section">H&#x1EC7; th&#x1ED1;ng</div>
                <a asp-area="Public" asp-controller="Home" asp-action="Index" class="admin-nav-item">
                    <i class="bi bi-house"></i>
                    <span>V&#x1EC1; trang ch&#x1EE7;</span>
                </a>
            </nav>

            <div style="position: absolute; bottom: 1rem; left: 0; right: 0; padding: 0 1.25rem;">
                @{
                    var displayName = User?.Identity?.Name ?? "Admin";
                    var email = User?.Claims?.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value ?? "";
                    var initials = displayName.Length >= 2 ? displayName.Substring(0, 2).ToUpper() : "AD";
                }
                <div class="user-menu" style="cursor: default; display: flex; align-items: center; gap: .75rem; padding: .75rem; background: rgba(255,255,255,.06); border-radius: .75rem;">
                    <div class="user-avatar" style="width: 36px; height: 36px; border-radius: 999px; background: rgba(255,255,255,.15); display: flex; align-items: center; justify-content: center; font-weight: 700;">
                        @initials
                    </div>
                    <div style="flex: 1; min-width: 0;">
                        <div style="font-weight: 600; font-size: 0.875rem; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            @displayName
                        </div>
                        <div style="font-size: 0.75rem; color: #94a3b8; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            @email
                        </div>
                    </div>
                </div>

                <form asp-area="Public" asp-controller="Account" asp-action="Logout" method="post" style="margin-top: 0.5rem;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm w-100" style="background: rgba(239,68,68,0.1); color: #f87171; border: none; border-radius: 6px; padding: 0.5rem;">
                        <i class="bi bi-box-arrow-right"></i> &#x110;&#x103;ng xu&#x1EA5;t
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="admin-content">
            <header class="admin-header">
                <h1 class="admin-header-title">@ViewData["Title"]</h1>
                <div class="admin-header-actions">
                    <button type="button" class="theme-toggle" id="themeToggle" aria-label="Chuyển giao diện">
                        <i class="bi bi-moon-stars" id="themeIcon"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary d-md-none" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
            </header>

            <main class="admin-main">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-admin">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-admin">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (window.SurveyWebTheme) {
                window.SurveyWebTheme.bindToggle();
            }

            const toggle = document.getElementById('sidebarToggle');
            const sidebar = document.querySelector('.admin-sidebar');

            if (toggle && sidebar) {
                toggle.addEventListener('click', function () {
                    sidebar.classList.toggle('show');
                    document.body.classList.toggle('sidebar-open', sidebar.classList.contains('show'));
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("~/Areas/Public/Views/Shared/_ChatbotWidget.cshtml")
</body>
</html>
