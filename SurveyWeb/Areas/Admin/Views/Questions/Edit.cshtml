@section Scripts {
<script>
    // X·ª≠ l√Ω thay ƒë·ªïi lo·∫°i c√¢u h·ªèi
    document.getElementById('questionType').addEventListener('change', function() {
        document.querySelectorAll('.question-options').forEach(el => el.style.display = 'none');
        
        const type = this.value;
        
        if (type === 'text') {
            document.getElementById('textOptions').style.display = 'block';
        } else if (type === 'rating') {
            document.getElementById('ratingOptions').style.display = 'block';
        } else if (type === 'nps') {
            document.getElementById('npsOptions').style.display = 'block';
        } else if (type === 'single' || type === 'multi') {
            document.getElementById('choicesOptions').style.display = 'block';
        }
    });

    // Validate form tr∆∞·ªõc khi submit
    document.getElementById('editQuestionForm').addEventListener('submit', function(e) {
        const type = document.getElementById('questionType').value;
        
        // N·∫øu l√† single/multi, check ph·∫£i c√≥ √≠t nh·∫•t 2 choices kh√¥ng r·ªóng
        if (type === 'single' || type === 'multi') {
            const choices = Array.from(document.querySelectorAll('#choicesList input[name="Choices[]"]'))
                .map(input => input.value.trim())
                .filter(val => val !== '');
            
            if (choices.length < 2) {
                e.preventDefault();
                alert('‚ö†Ô∏è C√¢u h·ªèi d·∫°ng ch·ªçn ph·∫£i c√≥ √≠t nh·∫•t 2 l·ª±a ch·ªçn!');
                return false;
            }
        }
    });

    function addChoice() {
        const list = document.getElementById('choicesList');
        const count = list.querySelectorAll('.choice-item').length + 1;
        const html = `
            <div class="input-group mb-2 choice-item">
                <span class="input-group-text">${count}</span>
                <input type="text" name="Choices[]" class="form-control" placeholder="L·ª±a ch·ªçn ${count}" />
                <button type="button" class="btn btn-outline-danger" onclick="removeChoice(this)">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        `;
        list.insertAdjacentHTML('beforeend', html);
        updateChoiceNumbers();
    }

    function removeChoice(btn) {
        btn.closest('.choice-item').remove();
        updateChoiceNumbers();
    }

    function updateChoiceNumbers() {
        const items = document.querySelectorAll('#choicesList .choice-item');
        items.forEach((item, index) => {
            item.querySelector('.input-group-text').textContent = index + 1;
            item.querySelector('input').placeholder = `L·ª±a ch·ªçn ${index + 1}`;
            item.querySelector('.btn-outline-danger').disabled = items.length === 1;
        });
    }

    // Trigger on load
    document.getElementById('questionType').dispatchEvent(new Event('change'));
</script>
}

