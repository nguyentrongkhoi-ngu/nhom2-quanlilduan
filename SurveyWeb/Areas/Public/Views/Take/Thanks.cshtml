@model long
@{
    Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cảm ơn bạn đã tham gia";
}

<section class="py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm text-center p-5">
                    <div class="display-4 text-success mb-3">
                        <i class="bi bi-emoji-smile"></i>
                    </div>
                    <h1 class="h3 fw-bold mb-2">Cảm ơn bạn!</h1>
                    <p class="text-muted mb-4">Chúng tôi đã ghi nhận phản hồi của bạn. Những chia sẻ của bạn giúp khảo sát trở nên hữu ích hơn.</p>
                    <div class="d-flex gap-3 justify-content-center">
                        <a asp-area="Public" asp-controller="Surveys" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-search me-1"></i>Xem khảo sát khác
                        </a>
                        <a asp-area="Public" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-1"></i>Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
