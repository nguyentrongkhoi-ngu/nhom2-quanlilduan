<!DOCTYPE html>
<html lang="vi" data-theme="light">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SurveyWeb</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Font: Be Vietnam Pro (tối ưu tiếng Việt) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- Bootstrap + Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/ultimate-design.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        * { font-family: 'Be Vietnam Pro', sans-serif; }
        body.theme-light { background: #f4f6ff; color: #0f172a; }
        body.theme-dark { background: #0b1120; color: rgba(248,250,252,.9); }

        /* === NAVBAR === */
        .navbar {
            margin-top: .75rem;
            border-radius: 18px;
            backdrop-filter: blur(18px);
            padding: .75rem 1.25rem;
            box-shadow: 0 18px 30px -22px rgba(2,6,23,.25);
            background: linear-gradient(135deg, rgba(255,255,255,.9), rgba(244,246,255,.75)) !important;
        }
        body.theme-dark .navbar {
            background: rgba(15,23,42,.85) !important;
            box-shadow: 0 20px 45px -28px rgba(2,6,23,.6);
        }
        .navbar-brand {
            font-weight: 800;
            letter-spacing: -0.01em;
            display: flex;
            align-items: center;
            gap: .5rem;
            font-size: 1.4rem;
        }
        .nav-link {
            font-weight: 600;
            color: #64748b !important;
            transition: .25s;
        }
        .nav-link:hover, .nav-link.active {
            color: #4f46e5 !important;
        }

        /* === BUTTONS === */
        .btn {
            border-radius: 999px;
            font-weight: 600;
        }
        .btn-primary {
            background: linear-gradient(135deg, #4f46e5, #0ea5e9);
            border: none;
        }
        .btn-primary:hover {
            filter: brightness(1.07);
            box-shadow: 0 16px 32px -20px rgba(79,70,229,.5);
        }
        .btn-outline-primary {
            border-width: 2px;
            color: #4f46e5;
            border-color: #4f46e5;
        }
        .btn-outline-primary:hover {
            background: #4f46e5;
            color: #fff;
        }

        /* === THEME TOGGLE === */
        .theme-toggle {
            border-radius: 999px;
            border: 1px solid rgba(148,163,184,.3);
            background: rgba(255,255,255,.7);
            width: 40px; height: 40px;
            display: inline-flex; align-items: center; justify-content: center;
            transition: .2s;
        }
        .theme-toggle:hover { transform: translateY(-2px); }
        body.theme-dark .theme-toggle {
            background: rgba(15,23,42,.6);
            color: #cbd5f5;
            border-color: rgba(148,163,184,.4);
        }

        /* === FOOTER === */
        footer {
            background: linear-gradient(180deg, rgba(15,23,42,1) 0%, rgba(30,41,59,1) 100%);
            color: rgba(226,232,240,.9);
            padding: 3rem 0 1rem;
            margin-top: 5rem;
        }
        footer a {
            color: #93c5fd;
            text-decoration: none;
        }
        footer a:hover { color: #fff; }
        footer .brand-footer {
            font-weight: 700;
            font-size: 1.2rem;
        }

        /* Decorative gradient line */
        .footer-line {
            height: 3px;
            width: 100%;
            background: linear-gradient(90deg,#4f46e5,#0ea5e9,#fbbf24);
            border-radius: 10px;
            margin-bottom: 2rem;
        }
    </style>
</head>

<body class="theme-light fade-in">
@{
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString() ?? string.Empty;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty;
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty;
}

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-area="Public" asp-controller="Home" asp-action="Index">
                <i class="bi bi-bar-chart-steps text-primary"></i>
                <span>SurveyWeb</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="mainNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(currentController=="Home"?"active":"")" asp-area="Public" asp-controller="Home" asp-action="Index">
                            Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController=="Surveys"?"active":"")" asp-area="Public" asp-controller="Surveys" asp-action="Index">
                            Tất cả khảo sát
                        </a>
                    </li>
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentController=="MySurveys"?"active":"")" asp-area="Public" asp-controller="MySurveys" asp-action="Create">
                                Tạo khảo sát
                            </a>
                        </li>
                    }
                </ul>

                <!-- USER + THEME -->
                <div class="d-flex align-items-center gap-2 ms-auto">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>@User.Identity?.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                <li class="dropdown-item-text text-muted small">Đã đăng nhập</li>
                                <li><a class="dropdown-item" asp-area="Public" asp-controller="MySurveys" asp-action="Index"><i class="bi bi-collection me-1"></i>Khảo sát của tôi</a></li>
                                <li><a class="dropdown-item" asp-area="Public" asp-controller="MySurveys" asp-action="Create"><i class="bi bi-plus-circle me-1"></i>Tạo khảo sát</a></li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i>Trang quản lý</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-area="Public" asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link link-danger p-0">
                                            <i class="bi bi-box-arrow-right me-1"></i>Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary btn-sm" asp-area="Public" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập
                        </a>
                        <a class="btn btn-primary btn-sm" asp-area="Public" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-person-plus me-1"></i>Đăng ký
                        </a>
                    }
                    <button class="theme-toggle" id="themeToggle" type="button" aria-label="Chuyển chế độ">
                        <i class="bi bi-moon-stars" id="themeIcon"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- MAIN -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="mt-5">
        <div class="footer-line"></div>
        <div class="container small d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
            <div>
                <span class="brand-footer"><i class="bi bi-stars text-warning"></i> SurveyWeb</span><br />
                <span class="text-secondary">© @DateTime.Now.Year — Developed by Team 2</span>
            </div>
            <div class="d-flex align-items-center gap-3">
                <a href="#" class="text-decoration-none"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-decoration-none"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-decoration-none"><i class="bi bi-github"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @await Html.PartialAsync("_ChatbotWidget")
</body>
</html>
