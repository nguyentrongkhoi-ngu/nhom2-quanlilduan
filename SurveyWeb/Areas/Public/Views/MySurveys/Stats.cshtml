@model SurveyWeb.Areas.Public.Controllers.MySurveysController.SurveyStatsVM
@{
    Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thống kê khảo sát";
}

<section class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Thống kê: @Model.Title</h3>
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i> Quay lại</a>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="text-muted small">Tổng lượt</div>
                        <div class="fs-4 fw-bold">@Model.TotalResponses</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="text-muted small">Hoàn thành</div>
                        <div class="fs-4 fw-bold">@Model.CompletedResponses</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="text-muted small">Đang làm</div>
                        <div class="fs-4 fw-bold">@Model.InProgressResponses</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="text-muted small">Người trả lời</div>
                        <div class="fs-4 fw-bold">@Model.DistinctRespondents</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">Chi tiết theo câu hỏi</h5>
            </div>
            <div class="card-body">
                @if (!Model.Questions.Any())
                {
                    <div class="text-muted">Chưa có câu hỏi.</div>
                }
                else
                {
                    <div class="vstack gap-4">
                        @foreach (var q in Model.Questions.OrderBy(x => x.OrderIndex))
                        {
                            <div>
                                <div class="fw-semibold mb-1">Câu @q.OrderIndex: @q.QuestionText</div>
                                <div class="text-muted small mb-2">
                                    Đã trả lời: @q.AnsweredCount | Bỏ qua: @q.SkippedCount
                                </div>

                                @if (q.Choices.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-sm align-middle">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>#</th>
                                                    <th>Phương án</th>
                                                    <th class="text-end">Lượt chọn</th>
                                                    <th class="text-end">%</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var c in q.Choices.OrderBy(x => x.OrderIndex))
                                            {
                                                <tr>
                                                    <td>@c.OrderIndex</td>
                                                    <td>@c.ChoiceText</td>
                                                    <td class="text-end">@c.Count</td>
                                                    <td class="text-end">@c.Percentage</td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else if (q.Numeric is not null)
                                {
                                    <div class="small">
                                        Trung bình: <strong>@q.Numeric.Average</strong>, Trung vị: <strong>@q.Numeric.Median</strong>, Min: <strong>@q.Numeric.Min</strong>, Max: <strong>@q.Numeric.Max</strong> (n=@q.Numeric.Count)
                                    </div>
                                }
                                else if (q.TextAnswerCount > 0)
                                {
                                    <div class="small text-muted">Số câu trả lời văn bản: @q.TextAnswerCount</div>
                                }
                                else
                                {
                                    <div class="small text-muted">Chưa có dữ liệu.</div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>

